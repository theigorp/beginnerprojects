				 			 {
				 			 	printf("Enter quantity:\n");
				 			 	scanf(" %d", &quantity);

				 			 	system("CLS");

				 			 	total = LVprice4 * quantity;

				 			 	if(quantity == 1)
				 			 	{
				 			 		printf("The price of your shirt is %.2f\n", total);
				 			 	}
				 			 	else
				 			 	{
				 			 		printf("The price of your shirts is %.2f\n", total);
				 			 	}
				 			 }

				 			 break;


				 	default : printf("Incorrect input\n");




				 }
				 break;













	}


    return 0;
}
